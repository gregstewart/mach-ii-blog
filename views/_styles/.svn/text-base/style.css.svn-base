#error {
	border : 1px solid #f00;
	padding : 5px
}

.error {
	color : #f00;
}

/* start tabless form layout */
div.row {
  clear : both;
}

div.row span.label {
  float : left;
  width : 60px;
  text-align : right;
}

div.row span.formw {
  float : right;
  width : 90px;
  text-align : left;
} 
/* end tabless form layout */

hr {
	display : none;
}

/* banner */
#banner {
	top: 0;
	color: #474747; 
	width: 100%;
}

#banner .bannerimg {
	background-image : url(../../i/img_ban_1.jpg);
	background-repeat : no-repeat;
	background-color : #0A2C6C;
	border-top: solid 1px #000;
	border-bottom: solid 1px #000;
	height : 70px;
}

#banner .title {
	padding : 5px 15px; 
	font-weight : bold;
	letter-spacing : 1px;
	margin : 0px;
	/*font-size: 14px;*/ 
}

/* tag line */
#tagline {
	position: absolute;
	top: 50px;
	padding-left: 200px;
	color : #b8b8b8;
	font-style : italic;
}

/* nav */
#nav {
	margin:0;
    padding: 4px 0;
    border-bottom: 1px dotted #474747;
}

#nav ul {
	display: inline;
} 

#nav ul li {
	border-left:1px dotted #474747;
    list-style: none;
	display: inline;
	padding: 3px 10px;
}

/* content */
#content {
	padding : 0;
	margin: 0 auto 0 auto;
}

.teaser {
	border-top: 1px dotted #474747;
	padding-top : 5px;
}

.sechd {
	margin:0 0 5px 0;
	padding-left: 5px;
	padding-top: 2px;
	padding-bottom: 3px;
	border: 1px solid #474747;
	background-color : #b8b8b8;
}
/* end content styles */

/* main col style */
.maincol {
	padding : 10px 10px 5px 5px;
	margin : 0;
	border-right: 1px dotted #474747;
}

.xcol {
	padding : 10px 0 0 0; 
}

ul.horizontalList {
	display: inline;	
}

li.horizontalList {
	list-style: none;
	display: inline;
	padding: 5px 0 5px 5px;	
}

/* footer */
#footer {
	border-top: 1px dotted #474747;
	padding : 15px;
	text-align: center;
}

/* make larger and smaller style*/
.font_control {
	padding : 2px;
	margin-left : 3px;
	border: dotted 1px;
}

.ampLogo {
	text-align : center;
}